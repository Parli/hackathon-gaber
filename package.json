{
  "name": "simple-server",
  "description": "A simple zero build dependency vanilla Node.js HTTP server with static serving, proxying, and storage",
  "version": "0.0.0",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm server.ts",
    "dev": "node --loader ts-node/esm --env-file=.env server.ts",
    "deploy": "scripts/deploy.sh",
    "undeploy": "scripts/undeploy.sh"
  },
  "engines": {
    "node": ">=23.6.0"
  },
  "volta": {
    "node": "23.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}